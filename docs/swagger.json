{
  "openapi": "3.0.0",
  "info": {
    "title": "URL Shortener API",
    "version": "1.0.0",
    "description": "API for shortening URLs and tracking visits"
  },
  "servers": [
    {
      "url": "http://localhost:3000",
      "description": "Development Server"
    }
  ],
  "paths": {
    "/shorten": {
      "post": {
        "summary": "Shorten a URL",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "longUrl": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Shortened URL returned",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "shortUrl": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/{shortId}": {
      "get": {
        "summary": "Redirect to original URL",
        "parameters": [
          {
            "name": "shortId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "302": { "description": "Redirects to the original URL" },
          "404": { "description": "URL not found" }
        }
      }
    },
    "/stats/{shortId}": {
      "get": {
        "summary": "Get URL visit statistics",
        "parameters": [
          {
            "name": "shortId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Visit statistics",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "total_visits": { "type": "integer" },
                    "today": { "type": "integer" },
                    "this_week": { "type": "integer" },
                    "this_month": { "type": "integer" }
                  }
                }
              }
            }
          },
          "404": { "description": "URL not found" }
        }
      }
    }
  }
}
